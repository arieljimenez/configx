// Place your settings in this file to overwrite the default settings
{
    //linux
    // "terminal.external.linuxExec": "bash",
    // "terminal.integrated.shell.linux": "/usr/bin/zsh",
    "terminal.integrated.fontFamily": "Inconsolata for Powerline",
    //Gwindows
    //"terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\sh.exe",
    // "terminal.integrated.fontFamily": "Consolas",
    // "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.fontSize": 16,
    "window.zoomLevel": 0,

    "editor.fontSize": 14,
    "editor.tabSize": 4,
    "editor.cursorStyle": "block",
    "editor.insertSpaces": true,
    "editor.minimap.enabled": false,
    "editor.formatOnPaste": true,
    "editor.cursorBlinking": "expand",
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    "editor.dragAndDrop": false,
    "editor.formatOnSave": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [80],
    "editor.acceptSuggestionOnEnter": "on",
    "editor.scrollBeyondLastLine": false,

    "files.trimTrailingWhitespace": true,
    "editor.selectionHighlight": true,
    // "files.autoSave": "onWindowChange",
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/elm-stuff": true,
        "**/.github": true,
        "**/node_modules": true,
        "**/118*": true //ignore webpack  temp files
    },

    // Set the address of the Elm Reactor server.
    // "elm.reactorHost": "0.0.0.0",
    // "elm.reactorPort": 9000,
    // "elm.formatOnSave": true,

    //Go configuration
    "go.lintTool": "golint",
    "go.lintOnSave": "package",
    "go.formatOnSave": true,
    "go.inferGopath": true,
    "workbench.colorTheme": "Monokai",
    "extensions.autoUpdate": false,
    "workbench.startupEditor": "newUntitledFile",
    "git.enableSmartCommit": true,
    "workbench.iconTheme": "vscode-icons"
}
